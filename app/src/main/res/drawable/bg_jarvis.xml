<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Dark Tech Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#020810"/>
        </shape>
    </item>

    <!-- Subtle Grid Overlay using repeated bitmap or just a gradient simulation -->
    <!-- For simplicity in vector, we'll use a radial gradient glow -->
    <item>
        <shape android:shape="rectangle">
             <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#1A00E5FF"
                android:centerColor="#0D00E5FF"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Central Tech Circle / Arc Reactor Outline -->
    <item android:gravity="center" android:width="200dp" android:height="200dp">
         <shape android:shape="ring"
             android:useLevel="false"
             android:thickness="2dp">
             <solid android:color="#00000000" />
             <stroke
                 android:width="2dp"
                 android:color="#4000E5FF" />
         </shape>
    </item>

    <item android:gravity="center" android:width="160dp" android:height="160dp">
         <shape android:shape="ring"
             android:useLevel="false"
             android:thickness="1dp">
             <solid android:color="#00000000" />
             <stroke
                 android:width="1dp"
                 android:color="#6000E5FF"
                 android:dashWidth="10dp"
                 android:dashGap="10dp"/>
         </shape>
    </item>

    <item android:gravity="center" android:width="300dp" android:height="300dp">
         <shape android:shape="ring"
             android:useLevel="false"
             android:thickness="1dp">
             <solid android:color="#00000000" />
             <stroke
                 android:width="1dp"
                 android:color="#2000E5FF" />
         </shape>
    </item>
</layer-list>
