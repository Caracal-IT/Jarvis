<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/bg_grocery_item"
    android:padding="12dp">

    <!-- Circle background sits behind icon via z-ordering: background view first, then icon on top -->
    <View
        android:id="@+id/iconContainer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgGroceryIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@null"
        android:contentDescription="@string/title_groceries"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/iconContainer"
        app:layout_constraintEnd_toEndOf="@id/iconContainer"
        app:layout_constraintStart_toStartOf="@id/iconContainer"
        app:layout_constraintTop_toTopOf="@id/iconContainer" />

    <TextView
        android:id="@+id/tvGroceryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="monospace"
        android:textColor="@color/iron_man_cyan"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconContainer"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
